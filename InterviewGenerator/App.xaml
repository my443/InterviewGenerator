<Application x:Class="InterviewGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InterviewGenerator"
             xmlns:vm="clr-namespace:InterviewGenerator.ViewModels.Screens"
             xmlns:v="clr-namespace:InterviewGenerator.UserControls"
             StartupUri="MainWindow.xaml"
             ThemeMode="System">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:HomeScreenViewModel}">
                <v:MainScreenUserControl />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CategoryViewModel}">
                <v:CategoryItemUserControl />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
